generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("POSTGRESS")
}


model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     String   // "Admin" | "Employer" | "Applicant"
  jobs     Job[]    @relation("UserJobs")
  apps     Application[]
}

model Job {
  id            Int           @id @default(autoincrement())
  title         String
  description   String
  createdBy     Int
  status        String?       @default("opened")
  salary        String?       @default("negotiation")
  createdAt     DateTime?     @default(now())
  creator       User          @relation("UserJobs", fields: [createdBy], references: [id])
  applications  Application[]
}

model Application {
  id        Int      @id @default(autoincrement())
  jobId     Int
  userId    Int
  resume    String
  createdAt DateTime @default(now())
  status    String   @default("applied")
  job       Job      @relation(fields: [jobId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}